@model ICollection<ASPInlämningTvå_KarbelIlias.Models.BestallningMatratt>

<div class="well">
<h2 id="MatrattsRubrik">Dina Varor:</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th id="table">Vara</th>
            <th id="table">Antal</th>
            <th id="table">Pris</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td id="table">@item.Matratt.MatrattNamn</td>
                <td id="table">@item.Antal</td>
                <td id="table">@item.Matratt.Pris</td>
            </tr>
        }
    </tbody>
</table>
<h2 id="MatrattsRubrik">TotalBelopp: @Model.Sum(x => x.Matratt.Pris * x.Antal) kr</h2><br /><br />
<a asp-controller="WebShop" asp-action="PayForOrder" class="btn btn-success" >Köp</a>
</div>